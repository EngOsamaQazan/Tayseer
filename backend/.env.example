# بيئة التطبيق
NODE_ENV=development
PORT=3000

# قاعدة البيانات PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/tayseer_db?schema=public"

# MongoDB
MONGODB_URI="mongodb://localhost:27017/tayseer_logs"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# تشفير
ENCRYPTION_KEY=your-32-character-encryption-key

# البريد الإلكتروني
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@tayseer.com

# تخزين الملفات
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 (اختياري)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=tayseer-uploads

# معدل الطلبات
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001

# واجهة برمجة التطبيقات الخارجية
SMS_API_KEY=
SMS_API_URL=

# الذكاء الاصطناعي
OPENAI_API_KEY=
ML_MODEL_PATH=./models

# رسوم النظام
SYSTEM_FEE_PERCENTAGE=2.5
LATE_PAYMENT_FEE_PERCENTAGE=1.0

# الجلسات
SESSION_SECRET=your-session-secret

# قاعدة بيانات للقراءة فقط (اختياري)
READ_DATABASE_URL=